---
const phoneNumber = "919966933500"; // âœ… no +, no spaces (India)
const defaultText =
  "Hi Krishna Logistics, I need employee transport support. Please share details.";
const href = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(defaultText)}`;
---

<a
  class="kl-wa"
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Chat on WhatsApp"
>
  <span class="kl-wa__icon" aria-hidden="true">
    <svg viewBox="0 0 32 32" width="22" height="22">
      <path
        fill="currentColor"
        d="M16 3C9.4 3 4 8.2 4 14.6c0 2.4.7 4.6 2 6.5L5 29l8-2.1c1.8 1 3.9 1.6 6.1 1.6 6.6 0 12-5.2 12-11.6C31 8.2 25.6 3 19 3H16Zm0 2h3c5.5 0 10 4.3 10 9.6S24.5 24.2 19 24.2c-2 0-3.9-.5-5.5-1.5l-.5-.3-4.7 1.2 1.3-4.3-.3-.5c-1.1-1.6-1.7-3.5-1.7-5.5C7.6 9.3 11.6 5 16.9 5H16Zm-3.5 7.3c-.3 0-.7.1-1 .4-.4.4-1.2 1.2-1.2 3 0 1.8 1.3 3.5 1.5 3.7.2.2 2.4 3.8 5.9 5.1 2.9 1.1 3.5.9 4.1.8.6-.1 1.9-.8 2.2-1.5.3-.7.3-1.3.2-1.5-.1-.2-.3-.3-.7-.5s-1.9-1-2.2-1.1c-.3-.1-.5-.2-.7.2-.2.3-.8 1.1-1 1.3-.2.2-.4.3-.8.1-.4-.2-1.6-.6-3-1.9-1.1-1-1.9-2.3-2.1-2.7-.2-.4 0-.6.2-.8l.5-.6c.2-.2.2-.4.4-.6.1-.2.1-.4 0-.6-.1-.2-.7-1.8-1-2.4-.3-.7-.6-.6-.9-.6h-.8Z"
      />
    </svg>
  </span>
  <span class="kl-wa__text">WhatsApp</span>
</a>

<style>
  .kl-wa{
    position: fixed;
    right: 18px;
    bottom: 10px;
    z-index: 1200;
    display: inline-flex;
    align-items: center;
    gap: 10px;

    background: #25D366;
    color: #0b1b13;
    text-decoration: none;
    font-weight: 800;

    padding: 12px 14px;
    border-radius: 999px;

    box-shadow: 0 10px 30px rgba(0,0,0,.25);
    transform: translateY(0);
    transition: transform .25s ease, filter .25s ease;
  }

  .kl-wa:hover{
    transform: translateY(-3px);
    filter: brightness(0.98);
  }

  .kl-wa__icon{
    width: 40px;
    height: 40px;
    border-radius: 999px;
    background: rgba(255,255,255,.35);
    display: grid;
    place-items: center;
  }

  .kl-wa__text{
    font-size: 14px;
    letter-spacing: .01em;
    padding-right: 2px;
  }

  /* Mobile: icon-only pill (clean) */
  @media (max-width: 640px){
    .kl-wa{
      right: 14px;
      bottom: 14px;
      padding: 10px;
    }
    .kl-wa__text{ display: none; }
    .kl-wa__icon{ width: 44px; height: 44px; }
  }
</style>
